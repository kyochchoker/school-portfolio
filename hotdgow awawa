#FOR LOOPS

#1 Print Numbers 1 to 10
for x in range (1, 11):
    print(x)

#2 Sum of First N Numbers
sum = 0
num = int(input("How many numbers do you want?"))
for x in range(1, num+1):
    sum += x
print(sum)

#3 Multiplication Table
n = int(input("Number: "))
for i in range(1, 11):
    print(n, "x", i, "=", n * i)

#4 Print Each Character
word = input("Please put a word: ")
for x in word:
    print(x)

#5 Print Even Numbers
for x in range (2, 21, 2):
    print(x)

#6 Factorial of a Number
num = int(input("Enter a number: "))
factorial = 1
for i in range(1, num + 1):
    factorial *= i
print(f"The factorial of {num} is {factorial}")

#7 List Iteration
fruits = ["apple", "banana", "cherry"]
for i in fruits:
    print(i)

#8 Reverse a String8
s = input("Pleasep ut a phrase/word: ")
for i in reversed(s):
    print(i)
